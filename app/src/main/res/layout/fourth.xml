<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#cea6a6"
    android:orientation="vertical">
<ImageView
    android:id="@+id/setup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_margin="10dp"
    android:src="@drawable/btv"/>
    <LinearLayout
        android:id="@+id/own_top"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/login1">
            <ImageView
                android:id="@+id/user_head_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/biggirl"/>
            <TextView
                android:id="@+id/user_loginname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textStyle="bold"
                android:text="未登录"/>

        <Button
            android:id="@+id/user_loginbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_shape"
            android:textColor="@color/white"
            android:text="登录" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f9f9f9"
        android:layout_below="@id/own_top"
        android:layout_marginTop="-5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frends" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="会员中心" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pacage_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frends" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="我的钱包" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/frends" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="我的奖品" />
        </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/own"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#d6d3d3"
            android:layout_below="@+id/center_layout"
            android:padding="8dp"
            android:text="个人中心" />

        <GridView
            android:id="@+id/own_center_rc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cfcfcf"
            android:layout_gravity="center"
            android:horizontalSpacing="2dip"
            android:layout_below="@id/own"
            android:layout_alignParentBottom="true"
            android:numColumns="3"
            android:paddingLeft="5dip"
            android:paddingTop="5dip"
            android:stretchMode="columnWidth"
            android:verticalSpacing="2dip">

        </GridView>

</RelativeLayout>
