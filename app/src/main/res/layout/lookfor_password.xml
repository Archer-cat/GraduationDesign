<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/head_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6aefe8">
        <ImageView
            android:id="@+id/msg_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/title_arrow_normal_smoba"/>
        <TextView
            android:id="@+id/title_help_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#363636"
            android:textSize="25sp"
            android:text="找回密码"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/seting_userPassword_again_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/phone_edittext"
                android:hint="请输入绑定的手机号"
                android:maxLines="1"
                android:padding="5dp"
                android:textSize="15sp" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/seting_userPhone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/phone_edittext"
                    android:hint="请输入验证码"
                    android:padding="5dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/getpassword_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/text_button_shape"
                    android:maxLines="1"
                    android:text="点击获取验证码"
                    android:textAlignment="center" />
            </TableRow>


        </TableLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/applyfor_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/register_button_shape"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:elevation="20dp"
        android:text="申请找回"
        android:textSize="28sp"
        android:textAlignment="center" />
</RelativeLayout>
